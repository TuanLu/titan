<div class="form-add">
<div class="panel panel-default ">
	<div class="panel-heading">
	<h4 class="panel-title"> <a data-toggle="collapse"  href="#review-content" class="collapseWill"> <?php echo $this->__('Write Your Own Review') ?> <span class="pull-left"> <i class="fa fa-caret-right"></i></span> </a> </h4>
	</div>
	<div id="review-content" class="panel-collapse collapse in">
		<div class="panel-body">
			<?php if ($this->getAllowWriteReviewFlag()): ?>
			<form action="<?php echo $this->getAction() ?>" method="post" id="review-form"  class="form-horizontal">
			<?php echo $this->getBlockHtml('formkey'); ?>
				<fieldset>
					<!-- Form Name -->
                   <legend><?php echo $this->__("You're reviewing:"); ?> <span><?php echo $this->escapeHtml($this->getProductInfo()->getName()) ?></span></legend>
				   <?php echo $this->getChildHtml('form_fields_before') ?>
					<?php if( $this->getRatings() && $this->getRatings()->getSize()): ?>
					<?php foreach ($this->getRatings() as $_rating): ?>
						<div class="form-group">
							<label class="col-md-4 control-label" ><?php echo $this->escapeHtml($_rating->getRatingCode()) ?></label>
							<div class="col-md-8">
<input type="radio" name="ratings[<?php echo $_rating->getId() ?>]" id="ratings_<?php echo $_rating->getId() ?>" value="" class="radio" data-min="0" data-max="5" data-step="1" data-size="xs" >
							</div>
							<script>
							jQuery(document).ready(function($){
								jQuery("#ratings_<?php echo $_rating->getId() ?>").rating({
									starCaptions: {1: "Very Poor", 2: "Poor", 3: "Ok", 4: "Good", 5: "Very Good"},
									starCaptionClasses: {1: "text-danger", 2: "text-warning", 3: "text-info", 4: "text-primary", 5: "text-success"},
								});
							
							});
							</script>
						</div>
					<?php endforeach; ?>
					<?php endif; ?>
 
					<!-- Text input-->
					  <div class="form-group">
						<label class="col-md-4 control-label" for="nickname_field"><em>*</em><?php echo $this->__('Nickname') ?></label>
						<div class="col-md-8">
						  <input id="nickname_field" name="nickname" placeholder="Your name" value="<?php echo $this->escapeHtml($data->getNickname()) ?>"class="form-control input-md input-text required-entry" type="text">
						</div>
					  </div>
					  <div class="form-group">
						<label class="col-md-4 control-label" for="summary_field"><em>*</em><?php echo $this->__('Summary') ?></label>
						<div class="col-md-8">
						  <input id="summary_field" name="title" placeholder="Enter review title" value=""class="form-control input-md input-text required-entry" type="text">
						</div>
					  </div>
					  <div class="form-group">
						<label class="col-md-4 control-label" for="review_field"><em>*</em><?php echo $this->__('Review') ?></label>
						<div class="col-md-8">
						  <textarea class="form-control required-entry" id="review_field" name="detail"><?php echo $this->escapeHtml($data->getDetail()) ?></textarea>
					  </div>
					  <div class="form-group">
						<label class="col-md-4 control-label" for="review_field"></label>
						<div class="col-md-8">
						   <p><em>*</em> Required Field.</p>
					  </div>
					   <div class="form-group">
						<label class="col-md-4 control-label"></label>
						<div class="col-md-8">
							<button type="submit" id="button2id"   title="<?php echo $this->__('Submit Review') ?>" class="btn btn-primary"><?php echo $this->__('Submit Review') ?></button>
						</div>
					  
					<input type="hidden" name="validate_rating" class="validate-rating" value="" />
				</fieldset>
				
			</form>
			<script type="text/javascript">
			//<![CDATA[
				var dataForm = new VarienForm('review-form');
			//]]>
			</script>
			<?php else: ?>
			<p class="review-nologged" id="review-form">
				<?php echo $this->__('Only registered users can write reviews. Please, <a href="%s">log in</a> or <a href="%s">register</a>', $this->getLoginLink(), Mage::helper('customer')->getRegisterUrl()) ?>
