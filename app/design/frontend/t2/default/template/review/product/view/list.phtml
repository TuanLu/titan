<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
	<div class="panel panel-default ">
		<div class="panel-heading">
		<h4 class="panel-title"> <a data-toggle="collapse"  href="#review-list" class="collapseWill"><?php echo $this->__('Customer Reviews') ?> <span class="pull-left"> <i class="fa fa-caret-right"></i></span> </a> </h4>
		</div>
		<div id="review-list" class="panel-collapse collapse in">
		<div class="panel-body">
        <?php echo $this->getChildHtml('toolbar') ?>
        <div class="review-list">
        <?php $i=0;foreach ($_items as $_review): $i++;?>
            <div class="form-group <?php if ( $i & 1 ) { echo 'odd';  } else { echo 'even';} ?>">
				<h3 class="review-title"><?php echo $this->escapeHtml($_review->getTitle()) ?></h3>
				<div class="">
				<?php $_votes = $_review->getRatingVotes(); ?>
                <?php if (count($_votes)): ?>
                <table class="data-table table table-striped">
                    <col width="1" />
                    <col />
                    <tbody>
                        <?php foreach ($_votes as $_vote): ?>
                        <tr>
                            <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
                            <td>
                                <div class="rating-box">
                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                </div>
                            </td>
                        </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>
                <?php endif; ?>
                <p><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
                <small class="date">
				<?php echo $this->__('Posted on %s', $this->formatDate($_review->getCreatedAt()), 'short') ?> - <?php echo $this->__('By <strong>%s</strong>', $this->escapeHtml($_review->getNickname())) ?></small>
				</div>
			</div>
        <?php endforeach; ?>
        </div>
        <?php echo $this->getChildHtml('toolbar') ?>
        </div>
        </div>		
    </div>		
    <?php endif;?>
    <?php //echo $this->getChildHtml('review_form') ?>
	<?php echo Mage::getSingleton("core/layout")->createBlock("review/form")->setTemplate('review/form.phtml')->toHtml(); ?>
</div>
