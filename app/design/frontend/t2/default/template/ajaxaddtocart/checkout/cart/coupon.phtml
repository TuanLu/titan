<script type="text/javascript">
//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    //return VarienForm.prototype.submit.bind(discountForm)();
}
jQuery(document).ready(function($) {
	var frm = $('#discount-coupon-form');
	frm.submit(function (ev) {
		$.ajax({
			type: frm.attr('method'),
			url: frm.attr('action'),
			dataType: 'text',
			data: frm.serialize(),
			beforeSend: function() {
				$('.checkout-cart-index #bac-overlay').removeClass('ajaxaddtocart-box-hide');
				$('.checkout-cart-index #bac-overlay').addClass('ajaxaddtocart-box-show');
				$('#ajaxaddtocart-progress').css({height: "auto", left: "534.5px", top: "166.5px", width: "auto"});
				$('#ajaxaddtocart-progress').removeClass('ajaxaddtocart-box-hide');
				$('#ajaxaddtocart-progress').addClass('ajaxaddtocart-box-show');
				
			},
			success: function (data) {		
				$('.checkout-cart-index #bac-overlay').removeClass('ajaxaddtocart-box-show');
				$('.checkout-cart-index #bac-overlay').addClass('ajaxaddtocart-box-hide');
				$('#ajaxaddtocart-progress').removeClass('ajaxaddtocart-box-show');
				$('#ajaxaddtocart-progress').addClass('ajaxaddtocart-box-hide');
				var _json=$.parseJSON(data);							
				if(_json.status==='SUCCESS'){
					$('.totals').html(_json.total);
					$('.coupon_box').html(_json.coupon);

				}					
				$('.cart > ul.messages').remove()
				$('.cart > form').before(_json.msg1);
				//frm[0].reset();
				//$('html,body,document').animate({scrollTop:0}, 700, 'linear');													
			}
		});

		ev.preventDefault();
	});
});
//]]>
</script>
