<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="row recommended">
    <h1> <?php echo $this->__('YOU MAY ALSO LIKE') ?> </h1>
	<div id="SimilarProductSlider">
    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>  
		<?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
            <div class="item">
				<div class="product"> <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(150) ?>" width="150" height="150" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" /></a>
				  <div class="description">
					<h4><a href="san-remo-spaghetti" href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a></h4>
					<?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
					<?php echo $this->getReviewsSummaryHtml($_link) ?>
				  </div>
				  <div class="grid-description">
					<?php 
					$custom = Mage::getModel('catalog/product')->load($_link->getId());
					$string =  $custom->getShortDescription();
					echo preg_replace('/\s+?(\S+)?$/', '', substr($string, 0, 50));
					?>
				  </div>
				  <div class="action-control"> 
				  <?php if($_link->isSaleable()): ?>
					<a class="btn btn-primary" onclick="setLocation('<?php echo $this->getAddToCartUrl($_link) ?>');"> <span class="add2cart"><i class="glyphicon glyphicon-shopping-cart"> </i> <?php echo $this->__('Add to Cart') ?> </span> </a> 
					<?php else: ?>
						<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
					<?php endif; ?>
				  </div>
				</div>
            </div>
            <?php else: ?>
            &nbsp;
        <?php endif; ?>
		<?php endfor; ?>
    <?php endfor; ?>
	</div>
</div>
<?php endif ?>
