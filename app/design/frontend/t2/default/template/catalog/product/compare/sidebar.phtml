<?php 
$_helper = $this->helper('catalog/product_compare');
$_items = $_helper->getItemCount() > 0 ? $_helper->getItemCollection() : null;
?>
<div class="panel panel-default block-compare">
  <div class="panel-heading">
	<h4 class="panel-title"> <a data-toggle="collapse"  href="#block-compare" class="collapseWill"> <span class="pull-left"> <i class="fa fa-caret-right"></i></span><?php echo $this->__('Compare Products') ?> <?php if($_helper->getItemCount() > 0): ?> 
                <small class="badge pull-right"><?php echo $this->__('%d', $_helper->getItemCount()) ?></small>
            <?php endif; ?></a> </h4>
  </div>
  <div id="block-compare" class="panel-collapse collapse in">
	<div class="panel-body">
		<div class="block-content">
		<?php if($_helper->getItemCount() > 0): ?>
			<ol>
			<?php foreach($_items as $_index => $_item): ?>
				<li>
					<p class="product-name pull-left"><a href="<?php echo $this->getProductUrl($_item) ?>">
					<?php $_imgSize = 50; ?>
						<img src="<?php echo $this->helper('catalog/image')->init(Mage::getModel('catalog/product')->load($_item->getId()), 'small_image')->keepFrame(false)->resize($_imgSize); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" class="img-responsive pull-left"/>
					<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName(), 'name') ?></a>
					<a href="<?php echo $_helper->getRemoveUrl($_item) ?>" title="<?php echo $this->__('Remove This Item') ?>" class="btn-remove  pull-right" onclick="return confirm('<?php echo $this->__('Are you sure you would like to remove this item from the compare products?') ?>');"><i class="glyphicon glyphicon-remove-circle"></i></a>
					</p>
					<input type="hidden" class="compare-item-id" value="<?php echo $_item->getId() ?>" />
					
					
				</li>
			<?php endforeach; ?>
			</ol>
			<div class="actions">
				<a href="<?php echo $_helper->getClearListUrl() ?>" onclick="return confirm('<?php echo $this->__('Are you sure you would like to remove all products from your comparison?') ?>');" class="btn btn-sm btn-danger"><?php echo $this->__('Clear All') ?></a>
				<button type="button" title="<?php echo $this->__('Compare') ?>" class="button btn btn-sm btn-primary" onclick="popWin('<?php echo $_helper->getListUrl() ?>','compare','top:0,left:0,width=820,height=600,resizable=yes,scrollbars=yes')"><span><span><?php echo $this->__('Compare') ?></span></span></button>
			</div>
		<?php else: ?>
			<p class="empty"><?php echo $this->__('You have no items to compare.') ?></p>
		<?php endif; ?>
		</div>
	</div>
  </div>
</div>