/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
	<?php echo $this->getStateHtml() ?>
	<?php if($this->canShowOptions()): ?>
	<?php $_filters = $this->getFilters() ?>
	<?php foreach ($_filters as $_filter): ?>
	<?php if($_filter->getItemsCount()): ?>
		<div class="panel panel-default">
			<div class="panel-heading">
			<h4 class="panel-title"> <a data-toggle="collapse"  href="#<?php echo preg_replace('/\s+/', '', $this->__($_filter->getName()));?>" class="collapseWill"> <span class="pull-left"> <i class="fa fa-caret-right"></i></span> <?php echo $this->__($_filter->getName()) ?> </a> </h4>
			</div>
			<div id="<?php echo preg_replace('/\s+/', '', $this->__($_filter->getName()));?>" class="panel-collapse collapse in">
				<div class="panel-body">
				  <?php echo $_filter->getHtml() ?>
				</div>
			</div> 
		</div>
	<?php endif; ?>
	<?php endforeach; ?>
    <?php endif; ?>
<?php endif; ?>