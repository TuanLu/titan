<?php
$_cartQty = $this->getSummaryCount();
if(empty($_cartQty)) {
    $_cartQty = 0;
}
?>
<?php $_items = $this->getRecentItems() ?>
<?php $countItems = count($_items); ?>
<?php if($countItems){ ?> 
<div class="w100 miniCartTable scroll-pane">
  <table>
	<tbody>
	 <?php foreach($_items as $_item): ?>
				<?php echo $this->getItemHtml($_item) ?>
	 <?php endforeach; ?>
	</tbody>
  </table>
</div> <!--/.miniCartTable-->
<div class="miniCartFooter text-right">
  <h3 class="text-right subtotal"><?php echo $this->__('Cart Subtotal') ?>: 
  <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
  <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?> / 
	  <?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> 
	  <?php echo Mage::helper('tax')->getIncExcText(true) ?>
  <?php endif; ?>
  </h3>
  <a class="btn btn-sm btn-danger cart-link" href="<?php echo $this->getUrl('checkout/cart'); ?>"><i class="fa fa-shopping-cart"> </i><?php echo $this->__('View Shopping Cart'); ?></a> 
  <a class="btn btn-sm btn-primary checkout-button" title="<?php echo $this->__('Checkout') ?>" href="<?php echo $this->getCheckoutUrl() ?>"> <?php echo $this->__('Checkout') ?> </a> 
</div> <!--/.miniCartFooter-->	
<?php }else { ?>
<div class="miniCartFooter text-right">
	<p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
</div>
<?php } ?>