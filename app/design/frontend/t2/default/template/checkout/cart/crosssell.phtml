/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()){ ?>
<div class="crosssell col-xs-10 text-center">
    <h2 class="block-title-2"> <?php echo $this->__('YOU MAY ALSO LIKE') ?> </h2>
    <div id="crosssellProductSlider">
    <?php foreach ($this->getItems() as $_item): ?>
        <div class="item">
			<div class="product"> <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(150) ?>" width="150" height="150" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
			  <div class="description">
				<h4><a href="san-remo-spaghetti" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h4>
				<?php echo $this->getPriceHtml($_item, true, '-upsell') ?>
				<?php echo $this->getReviewsSummaryHtml($_item) ?>
			  </div>
			  <div class="grid-description">
				<?php 
				$custom = Mage::getModel('catalog/product')->load($_item->getId());
				$string =  $custom->getShortDescription();
				echo preg_replace('/\s+?(\S+)?$/', '', substr($string, 0, 50));
				?>
			  </div>
			  <div class="action-control"> 
			  <?php if($_item->isSaleable()): ?>
				<a class="btn btn-primary" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>');"> <span class="add2cart"><i class="glyphicon glyphicon-shopping-cart"> </i> <?php echo $this->__('Add to Cart') ?> </span> </a> 
				<?php else: ?>
					<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
				<?php endif; ?>
			  </div>
			</div>
		</div>
    <?php endforeach; ?>
    </div>
    <?php // <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script> ?>
</div>
<?php }else { ?>
<a href="<?php echo $this->getUrl();?>"><img src="<?php echo $this->getSkinUrl('images/crossell.png');?>" alt="" /></a>
<?php } ?>
