<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="panel panel-default block-viewed">
  <div class="panel-heading">
	<h4 class="panel-title"> 
		<a data-toggle="collapse"  href="#block-viewed" class="collapseWill"> 
			<span class="pull-left"><i class="fa fa-caret-right"></i></span> <?php echo $this->__('Recently Viewed Products') ?>
		</a>
	</h4>
  </div>
  <div id="block-viewed" class="panel-collapse collapse in">
	<div class="panel-body">
		<div class="block-content">
			<ol id="recently-viewed-items">
			<?php foreach ($_products as $_item): ?>
				<li>
					<p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>">
					<?php $_imgSize = 50; ?>
						<img src="<?php echo $this->helper('catalog/image')->init(Mage::getModel('catalog/product')->load($_item->getId()), 'small_image')->keepFrame(false)->resize($_imgSize); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" class="img-responsive pull-left"/>
					<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a></p>
				</li>
			<?php endforeach; ?>
			</ol>
			<script type="text/javascript">decorateList('recently-viewed-items');</script>
		</div>
	</div>
  </div>
</div>
<?php endif; ?>
